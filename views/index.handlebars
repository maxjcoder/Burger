<div class="jumbotron">
    <div class="container">
        <div class="col-md-12">
            <div class="row">
                <div id="title">
                    <img src="/assets/img/burger.png" width="75" height="75">
                    <hr>
                    <h1>EAT DA BURGER!</h1>
                    <hr>
                    <p>Order a burger below. When it comes to your table, devour it!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="col-xs-6 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-xs-9 text center">
                    <pre>{{this.id}}.{{this.burger_name}}</pre>
                </div>
                <div class="col-xs-3 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-default">DEVOUR IT!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="card">
    <div class="card-body">
        <div class="col-xs-6 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>


<div class="card">
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-xs-4 text-center enter_section">

                    <form action="/burgers/create" method="POST">
                        <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                        <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
                    </form>
                    <p>Enter in a burger you would like to eat!</p>
                </div>
            </div>
        </div>
    </div>
</div>

