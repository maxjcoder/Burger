<div class="jumbotron">
    <div class="container">
        <div class="col-md-12">
            <div class="row">
                <div id="title">
                    <a href="https://www.google.com/search?q=what+is+a+hamburger%3F&rlz=1C1GGRV_enUS821US821&oq=wh&aqs=chrome.0.69i59l2j69i60j69i61j69i57j69i60.2857j0j7&sourceid=chrome&ie=UTF-8" target="_blank" title="click me to learn more about hamburgers!"><img src="/assets/img/burger.png" alt="hambuger image"></a>
                    <hr>
                    <h1></h1>EAT DA BURGER!</h1>
                    <hr>
                    <p>Order a burger below. When it comes to your table, devour it!</p>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="card" id="order">
    <div class="card-body">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center enter_section">
                    <form action="/burgers/create" method="POST">
                        <p id="order-label">Enter in a burger you would like to eat!</p>
                        <br>
                        <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
                        <br>
                        <button type="submit" class="btn btn-primary" id="text-enter-button">PLACE YOUR ORDER HERE</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<br>

<div class="card" id="devour-it">
    <div class="card-body">
        <div class="col-xs-12 text-center" class="task">
            <div class="row">
                {{#each burger_data}}
                {{#unless this.devoured}}
                <div class="col-xs-12 text center">
                    <pre>{{this.id}}.{{this.burger_name}}</pre>
                </div>
                <div class="col-xs-12 text-center">
                    <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                        <input type="hidden" name="burger_id" type="text" value={{this.id}}>
                        <br>
                        <button type="submit" class="btn btn-primary btn-sm">DEVOUR IT!</button>
                    </form>
                </div>
                {{/unless}}
                {{/each}}
            </div>
        </div>
    </div>
</div>

<div class="card" id="devoured">
    <div class="card-body">
        <div class="col-xs-12 text-center" class="task">
            {{#each burger_data}}
            {{#if this.devoured}}
            <input class="form-control" type="text" placeholder="{{this.id}}. {{this.burger_name}}" readonly>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

